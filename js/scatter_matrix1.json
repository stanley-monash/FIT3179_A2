{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "repeat": {
    "row": [
      "Score"
    ],
    "column": [
      "Social_support",
    "Healthy_life_expectancy",
    "Freedom_to_make_life_choices",
    "Perceptions_of_corruption"
    ]
  },
  "params": [
      {
          "name": "Continent_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "labels": [
              "Show All",
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "name": "Continent Selection: "
          }
        }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "spec": {
    "data": {
      "url": "https://raw.githubusercontent.com/stanley-monash/A2/main/data/aggregate.csv"
    },
    "width": 250, "height": 150,
    "mark": "point",
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "translate": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[pointerdown[!event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "encoding": {
      "x": {
        "field": {
          "repeat": "column"
        },
        "type": "quantitative"
      },
      "y": {
        "field": {
          "repeat": "row"
        },
        "type": "quantitative",
        "axis": {
          "minExtent": 30
        }
      },
      "color": {
        "condition": {
          "param": "brush",
          "field": "Continent",
          "type": "nominal"
        },
        "value": "grey"
      }
    }
  }
}